extends ../layouts/application.pug

block header
  div.text-center
    = t('views.user.table')

block content
  table.table.table-striped
    thead
      tr
        th= t('views.user.id')
        th= t('views.user.email')
        th= t('views.user.fullName')
        th= t('views.user.createdAt')
    tbody
      each user in users
        tr
          td= user.id
          td= user.email
          td= user.firstName + ' ' + user.lastName
          td= formatDate(user.createdAt)
