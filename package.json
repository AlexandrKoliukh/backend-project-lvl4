{
  "name": "@alk/task-manager",
  "version": "1.0.0",
  "description": "Simple task manager",
  "main": "",
  "scripts": {
    "test": "jest",
    "build-configs": "babel webpack.config.js --out-dir dist && cp knexfile.js dist",
    "build-server": "NODE_ENV=production babel server --out-dir dist/server --source-maps inline && npm run build-configs && cp -r server/views dist/server/views",
    "build-frontend": "NODE_ENV=production webpack -p",
    "build": "rm -rf dist && npm run build-frontend && npm run build-server && NODE_ENV=production knex migrate:latest && NODE_ENV=production knex seeds:run",
    "start": "NODE_ENV=production node dist/server/bin/server.js",
    "develop": "npx nodemon --exec DEBUG=application:* npx babel-node server/bin/server.js"
  },
  "author": "Aleksandr Koliukh",
  "dependencies": {
    "debug": "^4.2.0",
    "fastify": "^3.1.1",
    "fastify-auth": "^1.0.1",
    "fastify-error-page": "^4.0.0",
    "fastify-flash": "^2.0.2",
    "fastify-formbody": "^4.0.3",
    "fastify-method-override": "^1.4.0",
    "fastify-objectionjs": "^0.2.2",
    "fastify-reverse-routes": "^1.1.0",
    "fastify-secure-session": "^2.2.0",
    "fastify-static": "^3.1.0",
    "i18next": "^19.6.2",
    "knex": "^0.21.2",
    "lodash": "^4.17.19",
    "objection": "^2.2.1",
    "objection-unique": "^1.2.1",
    "pg": "^8.4.1",
    "point-of-view": "^4.2.0",
    "pug": "^3.0.0",
    "rollbar": "^2.19.3",
    "sass": "^1.26.11",
    "sqlite3": "^5.0.0",
    "webpack": "^4.43.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.10.5",
    "@babel/node": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "@types/node": "^14.0.23",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.1.0",
    "babel-loader": "^8.1.0",
    "css-loader": "^3.6.0",
    "eslint": "^7.4.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^23.18.0",
    "faker": "^5.1.0",
    "husky": "^4.3.0",
    "jest": "^26.1.0",
    "jest-cli": "^26.1.0",
    "lint-staged": "^10.4.0",
    "nodemon": "^2.0.4",
    "pino-pretty": "^4.0.3",
    "prettier": "^2.1.2",
    "style-loader": "^1.2.1",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
